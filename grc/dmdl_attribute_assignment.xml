<?xml version="1.0"?>
<block>
  <name>attribute_assignment</name>
  <key>dmdl_attribute_assignment</key>
  <category>[dmdl]</category>
  <import>import dmdl</import>
  <make>dmdl.attribute_assignment($develop_mode, $block_id, $field_name, $value)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Attribute name</name>
    <key>field_name</key>
    <value>""</value>
    <type>string</type>
  </param>

  <param>
    <name>Value</name>
    <key>value</key>
    <value>1</value>
    <type>int</type>
  </param>

  <param>
    <name>Show reconfiGure port</name>
    <key>show_reset</key>
    <value>1</value>
    <type>enum</type>
    <hide>part</hide>
    <option>
      <name>show</name>
      <key>0</key>
      <opt>hide:none</opt>
    </option>
    <option>
      <name>Not show</name>
      <key>1</key>
      <opt>hide:part</opt>
    </option>
  </param>

  <param>
    <name>Develop mode</name>
    <key>develop_mode</key>
    <type>enum</type>
    <hide>$develop_mode.hide</hide>
    <option>
      <name>off</name>
      <key>0</key>
      <opt>hide:part</opt>
      <opt>hide_control:all</opt>
    </option>
    <option>
      <name>on</name>
      <key>1</key>
      <opt>hide:none</opt>
      <opt>hide_control:none</opt>
    </option>
    <option>
      <name>time</name>
      <key>2</key>
      <opt>hide:none</opt>
      <opt>hide_control:none</opt>
    </option>
  </param>

  <param>
    <name>Block id</name>
    <key>block_id</key>
    <value>16</value>
    <type>int</type>
    <hide>$develop_mode.hide_control</hide>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>Begin</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <sink>
    <name>reconfiGure</name>
    <type>message</type>
    <optional>1</optional>
    <hide>$show_reset</hide>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>End</name>
    <type>message</type>
    <optional>1</optional>
  </source>
</block>
