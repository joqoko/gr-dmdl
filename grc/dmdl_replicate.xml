<?xml version="1.0"?>
<block>
  <name>replicate</name>
  <key>dmdl_replicate</key>
  <category>[dmdl]</category>
  <import>import dmdl</import>
  <make>dmdl.replicate($develop_mode, $block_id, $replicate_number)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Number of replicates</name>
    <key>replicate_number</key>
    <value>4</value>
    <type>int</type>
    <hide>part</hide>
  </param>

  <param>
    <name>Reset n replicates</name>
    <key>reset_number_replicate</key>
    <type>enum</type>
    <hide>part</hide>
    <option>
      <name>No</name>
      <key>1</key>
      <opt>hide:part</opt>
    </option>
    <option>
      <name>Yes</name>
      <key>0</key>
      <opt>hide:none</opt>
    </option>
  </param>

  <param>
    <name>Indicate complete</name>
    <key>show_complete</key>
    <value>1</value>
    <type>enum</type>
    <hide>part</hide>
    <option>
      <name>Yes</name>
      <key>0</key>
      <opt>hide:none</opt>
    </option>
    <option>
      <name>No</name>
      <key>1</key>
      <opt>hide:part</opt>
    </option>
  </param>

  <param>
    <name>Develop mode</name>
    <key>develop_mode</key>
    <type>enum</type>
    <hide>$develop_mode.hide</hide>
    <option>
      <name>off</name>
      <key>0</key>
      <opt>hide:part</opt>
      <opt>hide_control:all</opt>
    </option>
    <option>
      <name>on</name>
      <key>1</key>
      <opt>hide:none</opt>
      <opt>hide_control:none</opt>
    </option>
    <option>
      <name>time</name>
      <key>2</key>
      <opt>hide:none</opt>
      <opt>hide_control:none</opt>
    </option>
  </param>

  <param>
    <name>Block id</name>
    <key>block_id</key>
    <value>37</value>
    <type>int</type>
    <hide>$develop_mode.hide_control</hide>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>Begin</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <sink>
    <name>reconfiGure</name>
    <type>message</type>
    <optional>1</optional>
    <hide>$reset_number_replicate</hide>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>End</name>
    <type>message</type>
    <optional>1</optional>
  </source>
  <source>
    <name>complete_out</name>
    <type>message</type>
    <optional>1</optional>
    <hide>$show_complete</hide>
  </source>
</block>
