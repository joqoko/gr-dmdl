<?xml version="1.0"?>
<block>
  <name>tx_pending_simphy</name>
  <key>dmdl_tx_pending_simphy</key>
  <category>[dmdl.simphy]</category>
  <import>import dmdl</import>
  <make>dmdl.tx_pending_simphy($develop_mode, $block_id, $system_time_granularity_us, $sample_rate, $lengthtagname, $interframe_interval_s, $record_on, $file_name_extension, $name_with_timestamp)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Develop mode</name>
    <key>develop_mode</key>
    <value>develop_mode</value>
    <type>int</type>
    <option>
      <name>on</name>
      <key>1</key>
    </option>
    <option>
      <name>off</name>
      <key>0</key>
    </option>
    <option>
      <name>time</name>
      <key>2</key>
    </option>
  </param>
  <param>
    <name>Block id</name>
    <key>block_id</key>
    <value>5</value>
    <type>int</type>
  </param>
  <param>
    <name>System time granularity [us]</name>
    <key>system_time_granularity_us</key>
    <value>system_time_granularity_us</value>
    <type>int</type>
  </param>
  <param>
    <name>sample rate</name>
    <key>sample_rate</key>
    <value>samp_rate</value>
    <type>float</type>
  </param>
  <param>
    <name>Length tag name</name>
    <key>lengthtagname</key>
    <value>"packet_len"</value>
    <type>string</type>
  </param>
  <param>
    <name>Interframe interval</name>
    <key>interframe_interval_s</key>
    <value>0.005</value>
    <type>real</type>
  </param>

  <param>
    <name>Record on</name>
    <key>record_on</key>
    <type>enum</type>
    <hide>part</hide>
    <option>
      <name>off</name>
      <key>0</key>
      <opt>hide:all</opt>
    </option>
    <option>
      <name>on</name>
      <key>1</key>
      <opt>hide:part</opt>
    </option>
  </param>

  <param>
    <name>File name extension</name>
    <key>file_name_extension</key>
    <value>""</value>
    <type>string</type>
    <hide>none</hide>
  </param>

  <param>
    <name>filename with timestamp</name>
    <key>name_with_timestamp</key>
    <value>name_with_timestamp</value>
    <type>int</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>
  <sink>
    <name>tx_frame_info_in</name>
    <type>message</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>data_frame_out</name>
    <type>message</type>
  </source>
  <source>
    <name>ack_frame_out</name>
    <type>message</type>
  </source>
  <source>
    <name>beacon_frame_out</name>
    <type>message</type>
  </source>
  <source>
    <name>rts_frame_out</name>
    <type>message</type>
  </source>
  <source>
    <name>cts_frame_out</name>
    <type>message</type>
  </source>
  <source>
    <name>ampdu_frame_out</name>
    <type>message</type>
  </source>
  <source>
    <name>amsdu_frame_out</name>
    <type>message</type>
  </source>
  <source>
    <name>unknown_frame_out</name>
    <type>message</type>
  </source>
  <source>
    <name>rx_control_out</name>
    <type>message</type>
  </source>
</block>
